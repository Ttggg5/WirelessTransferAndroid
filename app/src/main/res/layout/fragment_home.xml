<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:text="@string/home"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_ip"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_name"
                android:textSize="20sp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0, 1">
                <TableRow android:layout_marginTop="50dp">
                    <com.example.wirelesstransferandroid.customviews.FunctionBtnView
                        android:id="@+id/mirrorBtn"
                        app:function_icon="@drawable/mirror_icon"
                        app:function_name="@string/mirror"/>

                    <com.example.wirelesstransferandroid.customviews.FunctionBtnView
                        android:id="@+id/extendBtn"
                        app:function_icon="@drawable/extend_screen_icon"
                        app:function_name="@string/extend"/>
                </TableRow>

                <TableRow android:layout_marginTop="50dp">
                    <com.example.wirelesstransferandroid.customviews.FunctionBtnView
                        android:id="@+id/fileShareBtn"
                        app:function_icon="@drawable/file_sharing_icon"
                        app:function_name="@string/file_share"/>

                    <com.example.wirelesstransferandroid.customviews.FunctionBtnView
                        android:id="@+id/settingBtn"
                        app:function_icon="@drawable/setting_icon"
                        app:function_name="@string/setting"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>