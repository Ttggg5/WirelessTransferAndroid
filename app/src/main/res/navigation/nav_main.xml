<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wirelesstransferandroid.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mirrorFragment"
            app:destination="@id/mirrorFragment" />
    </fragment>
    <fragment
        android:id="@+id/mirrorFragment"
        android:name="com.example.wirelesstransferandroid.fragments.MirrorFragment"
        android:label="fragment_mirror"
        tools:layout="@layout/fragment_mirror" >
        <action
            android:id="@+id/action_mirrorFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>